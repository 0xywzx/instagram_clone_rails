<%= form_with(model: @main, local: true, url: main_path) do |form| %>

<% if @main.errors.any? %>
    <div id="error_explanation">
      <h2><%= @main.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @main.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'form' %>
  
<% end %>
