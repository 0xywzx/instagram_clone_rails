<h1>詳細画面</h1>
<p>コメント: <%= @main.comment %></p>
<% if @main.image.present? %>
<p>
  <%= image_tag(@main.image.url, :size => "250x250") %>
</p>
<% end %>
<% unless @main.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(main_id: @main.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", mains_path %>
